{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "plugins": ["prettier"],
    "parser": "babel-eslint",
    "env": {
        "node": true,
        "browser": true,
        "es6": true,
        "jest": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "indent": ["error", 4],
        "yoda": ["error", "always"]
    }
}
