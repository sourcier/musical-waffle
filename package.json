{
    "name": "musical-waffle",
    "version": "1.0.0",
    "private": true,
    "dependencies": {
        "bootstrap": "^4.3.1",
        "classnames": "^2.2.6",
        "lodash": "^4.17.14",
        "parse": "^2.3.2",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-helmet": "^5.2.1",
        "react-markdown": "^4.0.8",
        "react-redux": "^7.1.0",
        "react-router-dom": "^5.0.0",
        "react-scripts": "^3.0.1",
        "redux": "^4.0.4",
        "redux-thunk": "^2.3.0"
    },
    "devDependencies": {
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.14.0",
        "enzyme-to-json": "^3.3.5",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-react": "^7.12.4",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.5",
        "now": "^15.6.2",
        "prettier": "^1.17.0",
        "pretty-quick": "^1.10.0",
        "react-snap": "^1.23.0",
        "redux-devtools-extension": "^2.13.8",
        "serve": "^11.1.0"
    },
    "scripts": {
        "start": "react-scripts start",
        "start:prod": "serve",
        "build": "react-scripts build",
        "postbuild": "react-snap",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "precommit": "CI=true yarn test; NODE_ENV=production lint-staged",
        "lint": "eslint ./src",
        "now-deploy": "now --target production -e NODE_ENV=production --token $NOW_TOKEN build",
        "now-rm": "now rm musical-waffle --token $NOW_TOKEN --safe --yes"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "lint-staged": {
        "*.{js,jsx}": [
            "pretty-quick --staged",
            "eslint src/ --fix",
            "git add"
        ]
    },
    "engines": {
        "node": "^8"
    },
    "jest": {
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ]
    }
}
