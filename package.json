{
    "name": "musical-waffle",
    "version": "1.2.0",
    "private": true,
    "dependencies": {
        "aws-amplify": "^2.2.4",
        "bootstrap": "^4.3.1",
        "classnames": "^2.2.6",
        "lodash": "^4.17.15",
        "next": "^9.2.1",
        "next-images": "^1.3.0",
        "react": "^16.10.2",
        "react-dom": "^16.10.2",
        "react-markdown": "^4.0.8",
        "react-redux": "^7.1.0",
        "redux": "^4.0.4",
        "redux-thunk": "^2.3.0",
        "trim-right": "^1.0.1"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.3",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.14.0",
        "enzyme-to-json": "^3.3.5",
        "eslint": "^6.5.1",
        "eslint-config-react-app": "^5.0.2",
        "eslint-plugin-flowtype": "^4.3.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.16.0",
        "eslint-plugin-react-hooks": "^2.1.2",
        "husky": "^3.0.2",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^25.1.0",
        "lint-staged": "^9.2.1",
        "prettier": "^1.18.2",
        "redux-devtools-extension": "^2.13.8"
    },
    "scripts": {
        "dev": "next",
        "start": "next start",
        "build": "next build",
        "export": "next export",
        "test": "jest",
        "test-watch": "jest --watch",
        "eslint": "eslint ./src",
        "eslint-fix": "eslint ./src --fix --ignore-path .gitignore",
        "prettier": "prettier --single-quote --write './src/**/*.{js,jsx,json,css,scss,md}'"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "engines": {
        "node": "^12"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn test && yarn eslint && yarn lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,json,css,scss,md}": [
            "prettier --single-quote --write",
            "git add"
        ],
        "src/**/*.{js,jsx}": [
            "eslint --fix",
            "git add"
        ]
    },
    "jest": {
        "setupFilesAfterEnv": [
            "./src/setupTests.js"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
            "\\.(css|less|scss)$": "identity-obj-proxy"
        },
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/.next/"
        ]
    }
}
