{
    "name": "musical-waffle",
    "version": "1.2.0",
    "private": true,
    "dependencies": {
        "bootstrap": "^4.3.1",
        "classnames": "^2.2.6",
        "lodash": "^4.17.15",
        "parse": "^2.3.2",
        "react": "^16.10.2",
        "react-dom": "^16.10.2",
        "react-helmet-async": "^1.0.4",
        "react-markdown": "^4.0.8",
        "react-redux": "^7.1.0",
        "react-router-dom": "^5.0.0",
        "react-scripts": "^3.0.1",
        "redux": "^4.0.4",
        "redux-thunk": "^2.3.0"
    },
    "devDependencies": {
        "@babel/core": "^7.6.4",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "@babel/preset-env": "^7.6.3",
        "@babel/preset-react": "^7.6.3",
        "babel-eslint": "^10.0.3",
        "babel-loader": "^8.0.6",
        "copy-webpack-plugin": "^5.0.4",
        "css-loader": "^3.2.0",
        "depcheck": "^0.8.3",
        "dotenv-webpack": "^1.7.0",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.14.0",
        "enzyme-to-json": "^3.3.5",
        "eslint": "^6.5.1",
        "eslint-config-react-app": "^5.0.2",
        "eslint-plugin-flowtype": "^4.3.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.16.0",
        "eslint-plugin-react-hooks": "^2.1.2",
        "file-loader": "^4.2.0",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^3.0.2",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^24.9.0",
        "lint-staged": "^9.2.1",
        "mini-css-extract-plugin": "^0.8.0",
        "node-sass": "^4.12.0",
        "prettier": "^1.18.2",
        "redux-devtools-extension": "^2.13.8",
        "sass-loader": "^8.0.0",
        "webpack": "^4.41.1",
        "webpack-cli": "^3.3.9",
        "webpack-dev-server": "^3.8.2"
    },
    "scripts": {
        "start": "webpack-dev-server --mode development",
        "start-prod": "cd build; now dev --listen 8080",
        "build": "webpack --mode production",
        "test": "jest",
        "test-watch": "jest --watch",
        "eslint": "eslint ./src",
        "eslint-fix": "eslint ./src --fix --ignore-path .gitignore",
        "prettier": "prettier --single-quote --write './src/**/*.{js,jsx,json,css,scss,md}'",
        "amplify-deploy": "curl -X POST \"https://webhooks.amplify.eu-west-2.amazonaws.com/prod/webhooks?id=$AMPLIFY_DEVELOP_BUILD_ID&token=$AMPLIFY_DEVELOP_BUILD_TOKEN&operation=startbuild\"",
        "amplify-deploy-prod": "curl -X POST \"https://webhooks.amplify.eu-west-2.amazonaws.com/prod/webhooks?id=$AMPLIFY_MASTER_BUILD_ID&token=$AMPLIFY_MASTER_BUILD_TOKEN&operation=startbuild\""
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "engines": {
        "node": "^10"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn test && yarn eslint && yarn lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,json,css,scss,md}": [
            "prettier --single-quote --write",
            "git add"
        ],
        "src/**/*.{js,jsx}": [
            "eslint --fix",
            "git add"
        ]
    },
    "jest": {
        "setupFilesAfterEnv": [
            "./src/setupTests.js"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
            "\\.(css|less|scss)$": "identity-obj-proxy"
        }
    }
}
